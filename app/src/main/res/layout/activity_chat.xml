<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChatActivity"
    android:background="@color/user_menu_card4">

    <LinearLayout
        android:id="@+id/chatTopDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_6sdp"
        android:background="@color/user_menu_card2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/chatBackspace"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_8sdp"
            app:srcCompat="@drawable/ic_backspace_24"
            app:tint="@color/home_fragment_primary_text"
            android:contentDescription="@string/content_desc_backspace" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="@color/user_menu_card4">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="0dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/chatImgPP"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:src="@drawable/test_profile_pic_3"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/content_desc_profile_picture" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/chatTxtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_name"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/home_fragment_primary_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chatTxtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_username_black_12"
                android:drawablePadding="@dimen/_2sdp"
                android:text="@string/placeholder_username"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/home_fragment_secondary_text"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/chatTopDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chatLytInp"
        android:layout_marginVertical="@dimen/_20sdp"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:clipToPadding="false">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatMsgListVw"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </ScrollView>

    <RelativeLayout
        android:id="@+id/chatLytInp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_24sdp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="@color/user_menu_card2">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                app:cardBackgroundColor="@color/home_fragment_card_background"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="@dimen/_16sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/chatTxtMsgInp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginHorizontal="@dimen/_6sdp"
                        android:gravity="center_vertical"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="@string/message_type"
                        android:inputType="text"
                        android:textColorHint="@color/home_fragment_secondary_text"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/home_fragment_primary_text"
                        android:textStyle="normal"
                        android:autofillHints="" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/chatImgSend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/chatTxtMsgInp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/chatTxtMsgInp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_send_24"
                        app:tint="@color/home_fragment_secondary_text"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@string/content_desc_send" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>