<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_menu_card3"
    tools:context=".activity.CreateDiscussionActivity">

    <View
        android:id="@+id/dscHdrVwNew"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_145sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/round_menu_discussion"
        android:backgroundTint="@color/user_menu_card2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/dscMaterialCrdVwTopNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dscHdrVwNew"
        app:layout_constraintBottom_toBottomOf="@id/dscHdrVwNew"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:cardBackgroundColor="@color/home_fragment_card_background"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:text="@string/title"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/home_fragment_primary_text" />

                <EditText
                    android:id="@+id/dscTxtTitleNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/type_title"
                    android:autofillHints="name"
                    android:inputType="text"
                    android:textColorHint="@color/home_fragment_secondary_text"
                    android:textStyle="italic"
                    android:textColor="@color/home_fragment_primary_text"
                    android:textSize="@dimen/_13ssp"
                    android:maxLines="3" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="@dimen/_6sdp"
                android:layout_marginHorizontal="@dimen/_8sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardBackgroundColor="@color/user_menu_card2"
                    app:cardElevation="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        app:cardPreventCornerOverlap="true"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/home_fragment_card_background">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_6sdp"
                            android:scrollbars="none"
                            android:overScrollMode="never"
                            android:clipToPadding="false">

                            <EditText
                                android:id="@+id/dscTxtDescNew"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:hint="@string/type_desc"
                                android:autofillHints="name"
                                android:inputType="text"
                                android:textColor="@color/home_fragment_secondary_text"
                                android:textStyle="italic"
                                android:maxLines="7"
                                android:textSize="@dimen/_12ssp" />

                        </ScrollView>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dscMaterialCrdVwTopNew"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_22sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/crtDiscCrdVwBackspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_menu_home"
            android:layout_margin="@dimen/_4sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/crtDiscCrdVwSave"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="@color/user_menu_card2"
            app:cardCornerRadius="@dimen/_40sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_9sdp"
                android:text="@string/backspace"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/home_fragment_primary_text"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/crtDiscCrdVwSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_menu_home"
            android:layout_margin="@dimen/_4sdp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/crtDiscCrdVwBackspace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/user_menu_card2"
            app:cardCornerRadius="@dimen/_40sdp"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_9sdp"
                android:text="@string/save"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/home_fragment_primary_text"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>