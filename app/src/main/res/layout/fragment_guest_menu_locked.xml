<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/user_menu_card3"
    tools:context=".fragment.GuestMenuLockedFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_transparent"
        android:translationZ="90dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="@color/user_menu_card1"
            app:cardCornerRadius="@dimen/_40sdp"
            app:cardElevation="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:text="@string/login_to_access"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textColor="@color/home_fragment_primary_text"
                android:textAlignment="center"
                android:layout_gravity="center" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/frgGstLckCrdVwHdrBg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_145sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/round_menu_tutor"
            app:cardBackgroundColor="@color/user_menu_card1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="@id/frgGstLckTxtVwTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_8sdp"
            app:srcCompat="@drawable/ic_backspace_24"
            app:tint="@color/white"
            android:contentDescription="@string/content_desc_backspace" />

        <TextView
            android:id="@+id/frgGstLckTxtVwTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_46sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:text="@string/search_tutor"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/frgGstLckMaterialCrdVwHdr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/frgGstLckCrdVwHdrBg"
            app:layout_constraintBottom_toBottomOf="@id/frgGstLckCrdVwHdrBg"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            app:cardBackgroundColor="@color/home_fragment_card_background"
            app:cardCornerRadius="@dimen/_16sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_14sdp">

                <TextView
                    android:id="@+id/frgGstLckTxtVwFilterHdr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/filter"
                    android:textColor="@color/home_fragment_primary_text"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/frgGstLckTxtVwFilterHdr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/frgGstLckLytTopRated"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/frgGstLckTxtVwFilterHdr"
                            app:layout_constraintEnd_toStartOf="@id/frgGstLckLytTrending"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_38sdp"
                                android:layout_height="@dimen/_38sdp"
                                android:src="@drawable/ic_top_rated_24"
                                android:tint="@color/home_fragment_primary_text" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                app:chipBackgroundColor="@color/user_menu_card1"
                                android:text="@string/top_rated"
                                android:textColor="@color/home_fragment_primary_text"
                                android:textStyle="bold"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/frgGstLckLytTrending"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/frgGstLckLytTopRated"
                            app:layout_constraintTop_toBottomOf="@id/frgGstLckTxtVwFilterHdr"
                            app:layout_constraintEnd_toStartOf="@id/frgGstLckLytNewcomer"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_38sdp"
                                android:layout_height="@dimen/_38sdp"
                                android:src="@drawable/ic_trending_24"
                                android:tint="@color/home_fragment_primary_text" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                app:chipBackgroundColor="@color/user_menu_card1"
                                android:text="@string/trending"
                                android:textColor="@color/home_fragment_primary_text"
                                android:textStyle="bold"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/frgGstLckLytNewcomer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/frgGstLckLytTrending"
                            app:layout_constraintTop_toBottomOf="@id/frgGstLckTxtVwFilterHdr"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_38sdp"
                                android:layout_height="@dimen/_38sdp"
                                android:src="@drawable/ic_newcomer_24"
                                android:tint="@color/home_fragment_primary_text" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/frgGstLckChipNewcomers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                app:chipBackgroundColor="@color/user_menu_card1"
                                android:text="@string/newcomer"
                                android:textColor="@color/home_fragment_primary_text"
                                android:textStyle="bold"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.chip.ChipGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/frgGstLckSearchVw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/frgGstLckMaterialCrdVwHdr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            app:queryHint="@string/search_a_tutor"
            app:searchIcon="@drawable/ic_search_24"
            app:iconifiedByDefault="false"
            android:background="@drawable/round_white_search" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_320sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:paddingHorizontal="@dimen/_3sdp"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="@color/home_fragment_card_background"
            app:layout_constraintTop_toBottomOf="@id/frgGstLckSearchVw">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:padding="@dimen/_16sdp"
                android:scrollbars="none">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/frgGstLckRecyclerVw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </ScrollView>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>