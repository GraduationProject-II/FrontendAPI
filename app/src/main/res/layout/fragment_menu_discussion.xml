<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.MenuDiscussionFragment"
    android:background="@color/user_menu_card2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO: change the color of the view and bg drawable -->
        <View
            android:id="@+id/frgDiscussionCrdVwHdrBg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_145sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/round_home_dashboard"
            app:cardBackgroundColor="@color/welcome_shading1" />

        <TextView
            android:id="@+id/frgDiscussionTxtVwTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_46sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:text="@string/discussion"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/frgDiscussionMaterialCrdVwHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/frgDiscussionCrdVwHdrBg"
            app:layout_constraintBottom_toBottomOf="@id/frgDiscussionCrdVwHdrBg"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            app:cardBackgroundColor="@color/home_fragment_card_background"
            app:cardCornerRadius="@dimen/_16sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_14sdp">

                <!-- id can be omitted -->
                <TextView
                    android:id="@+id/frgDiscussionTxtVwStatsHdr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/home_stats"
                    android:textColor="@color/home_fragment_primary_text"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/frgDiscussionLytTotalVote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/frgDiscussionTxtVwStatsHdr"
                    app:layout_constraintEnd_toStartOf="@id/frgDiscussionLytDiscussionsInvolved"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:src="@drawable/ic_discussion_vote_24"
                        android:tint="@color/home_fragment_primary_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/total_votes"
                        android:textColor="@color/home_fragment_secondary_text"
                        android:textSize="@dimen/_10ssp" />

                    <!-- TODO: retrieve actual number from backend, replace text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_num"
                        android:textColor="@color/home_fragment_primary_text"
                        android:textSize="@dimen/_16ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frgDiscussionLytDiscussionsInvolved"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/frgDiscussionLytTotalVote"
                    app:layout_constraintTop_toBottomOf="@id/frgDiscussionTxtVwStatsHdr"
                    app:layout_constraintEnd_toStartOf="@id/frgDiscussionLytUpVote"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:src="@drawable/ic_discussions_involved_24"
                        android:tint="@color/home_fragment_primary_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/discussions_involved"
                        android:textColor="@color/home_fragment_secondary_text"
                        android:textSize="@dimen/_10ssp" />

                    <!-- TODO: retrieve actual number from backend, replace text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_num"
                        android:textColor="@color/home_fragment_primary_text"
                        android:textSize="@dimen/_16sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frgDiscussionLytUpVote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/frgDiscussionLytDiscussionsInvolved"
                    app:layout_constraintTop_toBottomOf="@id/frgDiscussionTxtVwStatsHdr"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:src="@drawable/ic_discussion_up_vote_24"
                        android:tint="@color/home_fragment_primary_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/up_votes"
                        android:textColor="@color/home_fragment_secondary_text"
                        android:textSize="@dimen/_10ssp" />

                    <!-- TODO: retrieve actual number from backend, replace text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_num"
                        android:textColor="@color/home_fragment_primary_text"
                        android:textSize="@dimen/_16ssp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/frgDiscussionSearchVw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/frgDiscussionMaterialCrdVwHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            app:queryHint="@string/search_discussion"
            app:searchIcon="@drawable/ic_search_24"
            app:iconifiedByDefault="false"
            android:background="@drawable/round_white_search" />

        <ScrollView
            android:id="@+id/frgDiscussionScrollVw"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/frgDiscussionSearchVw"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:padding="@dimen/_16sdp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- TODO: retrieve users from backend  -->
                <!-- TODO: list multiple users -->
                <!-- TODO: make each list clickable -->
                <include layout="@layout/home_dashboard_item" />
                <include layout="@layout/home_dashboard_item" />
                <include layout="@layout/home_dashboard_item" />
                <include layout="@layout/home_dashboard_item" />
                <include layout="@layout/home_dashboard_item" />
                <include layout="@layout/home_dashboard_item" />
                <include layout="@layout/home_dashboard_item" />
                <include layout="@layout/home_dashboard_item" />
                <include layout="@layout/home_dashboard_item" />
                <include layout="@layout/home_dashboard_item" />

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>