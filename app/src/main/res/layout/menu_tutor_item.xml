<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_4sdp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/frgTutorListItemCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="14dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/test_palette_3.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_gravity="center_vertical"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="20dp"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="@color/test_palette_3.4">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_3sdp"
                    app:cardPreventCornerOverlap="true"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="40dp">

                    <ImageView
                        android:id="@+id/frgTutorListItemPP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/test_profile_pic_4"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/content_desc_profile_picture" />

                </com.google.android.material.card.MaterialCardView>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp">

                        <TextView
                            android:id="@+id/frgTutorListItemName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/placeholder_name"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/home_fragment_primary_text"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:lines="1" />

                        <TextView
                            android:id="@+id/frgTutorListItemUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/placeholder_username"
                            android:textColor="@color/home_fragment_secondary_text"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="italic"
                            android:drawableStart="@drawable/ic_username_black_12"
                            android:drawablePadding="@dimen/_1sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            app:srcCompat="@drawable/ic_vote_24"
                            android:contentDescription="@string/content_desc_rep" />

                        <TextView
                            android:id="@+id/frgTutorListItemRep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/placeholder_num"
                            android:textSize="@dimen/_13ssp"
                            android:textColor="@color/home_fragment_primary_text"
                            android:layout_gravity="center"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fields"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold"
                        android:textColor="@color/home_fragment_primary_text" />

                    <TextView
                        android:id="@+id/frgTutorListItemFields"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:text="@string/placeholder_fields"
                        android:textStyle="normal"
                        android:textColor="@color/home_fragment_secondary_text"
                        android:textSize="@dimen/_10ssp"
                        android:maxLines="5" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_me"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold"
                        android:textColor="@color/home_fragment_primary_text" />

                    <TextView
                        android:id="@+id/frgTutorListItemDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:text="@string/placeholder_desc"
                        android:textStyle="normal"
                        android:textColor="@color/home_fragment_secondary_text"
                        android:textSize="@dimen/_10ssp"
                        android:maxLines="5" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>