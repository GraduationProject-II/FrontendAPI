<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TutorCave" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/def_purple_500</item>
        <item name="colorPrimaryVariant">@color/def_purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/def_teal_200</item>
        <item name="colorSecondaryVariant">@color/def_teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">@android:color/transparent</item>

        <!-- Customization -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>