    <!-- Base application theme. -->
    <style name="Theme.TutorCave" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/def_purple_500</item>
        <item name="colorPrimaryVariant">@color/def_purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/def_teal_200</item>
        <item name="colorSecondaryVariant">@color/def_teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">@android:color/transparent</item>

        <!-- Customization -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Settings screen no title bar -->
    <style name="Theme.NoTitleBar" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Setting screen night mode option's switch theme -->
    <style name="settingsNightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/settings_night_mode</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!-- Setting screen notification option's switch theme -->
    <style name="settingsNotification" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/settings_notifications</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!-- Setting screen private account option's switch theme -->
    <style name="settingsPrivateAcc" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/settings_private_acc</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
</resources>